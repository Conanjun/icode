.showModal-ctn {
	position: fixed;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, .5);
	z-index: 999999;
	word-break: break-all;
	word-wrap: break-word;
}

.showModal-outer {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	background: #fff;
	border-radius: 8rpx;	
	overflow: hidden;
	width: 86%;
}

.showModal-title {
	text-align: center;
	color: #222;
	margin: 30rpx 0;
}

.showModal-inner {
	padding: 0 35rpx;
	margin-bottom: 90rpx;
	overflow: auto;
	min-height: 200rpx;
	max-height: 800rpx;
}

.showModal-btn {
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
}

.showModal-btn view {
	display: inline-block;
	width: 50%;
	height: 100%;
	box-sizing: border-box;
	border: 1px solid #eee;
	border-right: none;
	border-bottom: none;
	text-align: center;
	background: #fff;
}

.showModal-btn view:active {
	background: #eee;
}

.showModal-btn .showModal-cancle {
}

.showModal-btn .showModal-ensure {
	color: #09BB07;
}