.vb-chatCtn-scroll {
	overflow: auto;
    height: 100%;
}
.vb-chatCtn {
	padding: 10px 0;
    position: absolute;
    top: 0;
    left: 0;
    background: #EBEBEB;
    width: 100%;
    min-height: 100%;
    box-sizing: border-box;
}
.vb-editCtn {
}
.vb-inputCtn {
	position: relative;
    height: 100rpx;
}
.vb-input {
	margin: 0 20rpx;
    height: 50%;
    border-bottom: 1px solid #1b96ff;
    transform: translate(0, 50%);
}
.vb-sendBtnCtn {
    height: 100%;
}
.vb-sendBtn {
    height: 100rpx;
    line-height: 100rpx;
    background: #1b96ff;
    color: #fff;
    text-align: center;
}
.vb-inputCtn image {
	width: 100%;
    height: 100%;
}
